{
  "name": "Smart Filler Simple",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Auto-fill form fields with random data",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": [
    "https://random-word-api.vercel.app/",
    "https://generativelanguage.googleapis.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["vendor/sweetalert2/sweetalert2.min.css", "vendor/sweetalert2/sweetalert2@11.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
